@using Domain.Models
@model IEnumerable<SettledBet>

@{
    var customer = @Model != null && @Model.Any() ? @Model.First().Customer.ToString() : string.Empty;
}

<h2>Settled bets for customer: @customer</h2>
<table class="table" id="statistics">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Participant</th>
            <th>Event</th>
            <th>Stake</th>
            <th>Won</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-2">@item.Customer</td>
                <td class="col-md-2">@item.Participant</td>
                <td class="col-md-2">@item.Event</td>
                <td class="col-md-2">@item.Stake.ToString("N")$</td>
                <td class="col-md-4">@item.Win.ToString("N")$</td>
            </tr>
        }
    </tbody>
</table>

